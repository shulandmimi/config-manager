{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist/",
        "declaration": true,
        "declarationDir": "./dist/",
        "baseUrl": ".",
        "lib": [
            "ESNext",
        ],
        "types": [
            "@types/node"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "declarationMap": true
    },
    "include": ["src/**/*.ts"],
}
